{
  "name": "@gestion-chantier/monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Universal data/tools architecture - Web + Mobile",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/web",
    "dev:web": "npm run dev --workspace=packages/web",
    "dev:server": "cd packages/server && node index.js",
    "build": "npm run build --workspaces --if-present",
    "build:core": "npm run build --workspace=packages/core",
    "build:web": "npm run build --workspace=packages/web",
    "clean": "npm run clean --workspaces --if-present",
    "install:all": "npm install --workspaces",
    "link:core": "npm link --workspace=packages/core && npm link @gestion-chantier/core --workspace=packages/web",
    "setup": "npm run install:all && npm run build:core && npm run link:core"
  },
  "devDependencies": {
    "typescript": "~5.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
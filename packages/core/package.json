{
  "name": "@gestion-chantier/core",
  "version": "1.0.0",
  "description": "Core data engine and tools registry for universal project management",
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": "./index.js",
    "./types": "./types/index.js",
    "./data-engine": "./data-engine/index.js",
    "./tools-registry": "./tools-registry/index.js"
  },
  "scripts": {
  "build": "tsc",
  "dev": "tsc --watch",
  "validate-config": "node --loader ts-node/esm ./scripts/validate-config.ts",
  "kernel-selftest": "node dist/scripts/kernel-selftest.js",
  "repo-selftest": "node dist/scripts/repository-selftest.js",
  "bridge-selftest": "node dist/scripts/bridge-selftest.js",
  "validation-selftest": "node dist/scripts/validation-selftest.js",
  "resource-service-selftest": "node dist/scripts/resource-service-selftest.js",
  "indexer-selftest": "node dist/scripts/indexer-selftest.js",
  "tool-execution-selftest": "node dist/scripts/tool-execution-selftest.js",
  "migration-selftest": "node dist/scripts/migration-selftest.js",
  "deletion-selftest": "node dist/scripts/deletion-selftest.js",
  "metrics-selftest": "node dist/scripts/metrics-selftest.js",
  "health-selftest": "node dist/scripts/health-selftest.js",
  "bootstrap-selftest": "node dist/scripts/bootstrap-selftest.js",
  "measurement-migration-selftest": "node dist/scripts/measurement-migration-selftest.js",
  "export-selftest": "node dist/scripts/export-selftest.js",
  "export-manifest-selftest": "node dist/scripts/export-manifest-selftest.js",
  "sqlite-filters-selftest": "node dist/scripts/sqlite-filters-selftest.js",
  "sqlite-migration-selftest": "node dist/scripts/sqlite-migration-selftest.js",
  "reindex-selftest": "node dist/scripts/reindex-selftest.js",
  "selftest:all": "npm run build && npm run kernel-selftest && npm run repo-selftest && npm run validation-selftest && npm run resource-service-selftest && npm run indexer-selftest && npm run tool-execution-selftest && npm run migration-selftest && npm run measurement-migration-selftest && npm run deletion-selftest && npm run metrics-selftest && npm run health-selftest && npm run bridge-selftest && npm run bootstrap-selftest && npm run export-selftest && npm run export-manifest-selftest && npm run sqlite-filters-selftest && npm run sqlite-migration-selftest && npm run reindex-selftest",
  "quickstart": "node dist/scripts/quickstart-demo.js",
  "cli": "node dist/scripts/cli.js",
    "clean": "rm -rf dist *.js *.d.ts types/*.js types/*.d.ts data-engine/*.js data-engine/*.d.ts tools-registry/*.js tools-registry/*.d.ts"
  },
  "keywords": [
    "data-engine",
    "tools-registry",
    "cross-platform",
    "react",
    "react-native",
    "typescript"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "zod": "^3.23.8",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}
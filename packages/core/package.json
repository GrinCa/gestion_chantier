{
  "name": "@gestion-chantier/core",
  "version": "1.0.0",
  "description": "Core data engine and tools registry for universal project management",
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": "./index.js",
    "./types": "./types/index.js",
    "./data-engine": "./data-engine/index.js",
    "./tools-registry": "./tools-registry/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "validate-config": "node --loader ts-node/esm ./scripts/validate-config.ts",
    "kernel-selftest": "node --loader ts-node/esm ./scripts/kernel-selftest.ts",
    "repo-selftest": "node --loader ts-node/esm ./scripts/repository-selftest.ts",
    "bridge-selftest": "node --loader ts-node/esm ./scripts/bridge-selftest.ts",
    "validation-selftest": "node --loader ts-node/esm ./scripts/validation-selftest.ts",
    "resource-service-selftest": "node --loader ts-node/esm ./scripts/resource-service-selftest.ts",
    "indexer-selftest": "node --loader ts-node/esm ./scripts/indexer-selftest.ts",
    "tool-execution-selftest": "node --loader ts-node/esm ./scripts/tool-execution-selftest.ts",
    "migration-selftest": "node --loader ts-node/esm ./scripts/migration-selftest.ts",
    "deletion-selftest": "node --loader ts-node/esm ./scripts/deletion-selftest.ts",
    "metrics-selftest": "node --loader ts-node/esm ./scripts/metrics-selftest.ts",
    "health-selftest": "node --loader ts-node/esm ./scripts/health-selftest.ts",
    "bootstrap-selftest": "node --loader ts-node/esm ./scripts/bootstrap-selftest.ts",
    "measurement-migration-selftest": "node --loader ts-node/esm ./scripts/measurement-migration-selftest.ts",
    "export-selftest": "node --loader ts-node/esm ./scripts/export-selftest.ts",
    "clean": "rm -rf dist *.js *.d.ts types/*.js types/*.d.ts data-engine/*.js data-engine/*.d.ts tools-registry/*.js tools-registry/*.d.ts"
  },
  "keywords": [
    "data-engine",
    "tools-registry",
    "cross-platform",
    "react",
    "react-native",
    "typescript"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}